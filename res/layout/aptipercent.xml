<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <EditText
        android:id="@+id/Et_apti_numerator"
        style="@style/ETStyle"
        android:hint="@string/enterNumerator"
        android:inputType="number" />

    <EditText
        android:id="@+id/Et_apti_denominator"
        style="@style/ETStyle"
        android:hint="@string/enterDenominator"
        android:inputType="number" />

    <TextView
        android:id="@+id/Tv_apti_output"
        style="@style/TVStyle"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:textSize="22sp" />

    <Button
        android:id="@+id/b_apti_calcPercent"
        style="@style/ButtonStyle"
        android:text="@string/calcPercent" />

    <Button
        android:id="@+id/b_apti_calcValue"
        style="@style/ButtonStyle"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/perValue"
        android:textSize="22sp" />

</LinearLayout>