<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <RadioGroup
        android:id="@+id/RgTimeDist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/RbTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/RbTime" />

        <RadioButton
            android:id="@+id/RbSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RbSpeed" />

        <RadioButton
            android:id="@+id/RbDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RbDistance" />
    </RadioGroup>

    <EditText
        android:id="@+id/EtTime"
        style="@style/ETStyle"
        android:ems="10"
        android:hint="@string/enterTime"
        android:inputType="number"
        android:visibility="gone" />

    <EditText
        android:id="@+id/EtSpeed"
        style="@style/ETStyle"
        android:ems="10"
        android:hint="@string/enterSpeed"
        android:inputType="number" />

    <EditText
        android:id="@+id/Etdistance"
        style="@style/ETStyle"
        android:ems="10"
        android:hint="@string/enterDistance"
        android:inputType="number" />

    <TextView
        android:id="@+id/TvResult"
        style="@style/TVStyle"
        android:gravity="center"
        android:textIsSelectable="true"
        android:textSize="22sp" />

    <Button
        android:id="@+id/BCalcTDS"
        android:layout_width="wrap_content"
        style="@style/ButtonStyle"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/calc" />

</LinearLayout>